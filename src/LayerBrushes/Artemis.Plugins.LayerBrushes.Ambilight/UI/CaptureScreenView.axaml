<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Artemis.Plugins.LayerBrushes.Ambilight.UI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Artemis.Plugins.LayerBrushes.Ambilight.UI.CaptureScreenView"
             x:DataType="ui:CaptureScreenViewModel">
    <Border Classes="card-condensed" Padding="0" ClipToBounds="True">
        <Grid ColumnDefinitions="*,Auto">
            <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="10">
                <TextBlock Text="{CompiledBinding DisplayName}" Classes="h4"></TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{CompiledBinding Display.Width}"></TextBlock>
                    <TextBlock Text="x"></TextBlock>
                    <TextBlock Text="{CompiledBinding Display.Height}"></TextBlock>
                </StackPanel>
                <TextBlock Text="{CompiledBinding Display.GraphicsCard.Name}" Classes="subtitle"></TextBlock>
            </StackPanel>
            <Image Grid.Row="0" Grid.Column="1" Height="100" Source="C:\Users\Robert\Documents\ShareX\Screenshots\2022-04\K2F9In3yKr.jpg" Stretch="Uniform"/>
        </Grid>
    </Border>
</UserControl>
